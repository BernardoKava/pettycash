<% provide(:title, "Transactions") %>

<div>
  <p id="notice"><%= notice %></p>
</div>

<div class="breadcrumb" style="background-color: #2a4b51;color: white">
  <h2>Transactions</h2>
  <div class="alert-info"style="text-align: center" >
    <%= link_to " Go To Cash Boxes", cashboxes_path,style:'color:green' %>
  </div>
</div>

<div class="jumbotron" style="background-color: lightgoldenrodyellow;color: navy">
  <table class=" table table-hover" >
    <thead>
    <tr>
      <th>Ref</th>
      <th>T date</th>
      <th>Details</th>
      <th>Amount</th>
      <th>Cashbox</th>
      <th>Owner</th>
      <th>Cashflow</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.id %></td>
        <td><%= transaction.t_date.strftime("%d %b. %Y")  %></td>
        <td><%= link_to transaction.details,transaction %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.cashbox.name %></td>
        <td><%= transaction.person.fullname %></td>
        <td><%= transaction.cashflow.name%></td>
        <td><%= link_to 'View', transaction,class:'fa fa-eye'  %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction), class:'fa fa-edit' %></td>
        <td><%= link_to 'Delete', transaction, method: :delete, data: { confirm: 'Are you sure?' }, class:'fa fa-remove' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= will_paginate @transactions %>
  <br>

  <%= link_to 'New Transaction', new_transaction_path %>
</div>



