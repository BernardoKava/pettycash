
<% provide(:title, "Cash Boxes") %>

<div>
  <p id="notice"><%= notice %></p>
</div>

<div class="breadcrumb" style="background-color: #2a4b51;color: white">
  <h2>Cashboxes</h2>
  <div class="alert-info" style="text-align: center">
    <%= link_to "Go To Transactions", transactions_path,style:'color:green' %>
  </div>
</div>

<div class="jumbotron" style="background-color: lightgoldenrodyellow;color: navy">
  <table class=" table table-hover" >
    <thead>
    <tr>
      <th>Ref</th>
      <th>Name</th>
      <th>Accounting date</th>
      <th>Active</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @cashboxes.each do |cashbox| %>
      <tr>
        <td><%= cashbox.id %></td>
        <td><%= link_to cashbox.name,cashbox %></td>
        <td><%= cashbox.accounting_date.strftime("%d %b. %Y") %></td>
        <td><%= cashbox.active.humanize %></td>
        <td><%= cashbox.balance %></td>
        <td><%= link_to 'View', cashbox,class:'fa fa-eye'  %></td>
        <td><%= link_to 'Edit', edit_cashbox_path(cashbox), class:'fa fa-edit'  %></td>
        <td><%= link_to 'Delete', cashbox, method: :delete, data: { confirm: 'Are you sure?' }, class:'fa fa-remove' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= will_paginate @cashboxes %>
  <br>

  <%= link_to 'New Cashbox', new_cashbox_path %>

</div>

