<p id="notice"><%= notice %></p>

<h1>Cashflows</h1>

<table>
  <thead>
    <tr>
      <th>Month</th>
      <th>Year</th>
      <th>Accounting date</th>
      <th>Name</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cashflows.each do |cashflow| %>
      <tr>
        <td><%= cashflow.month %></td>
        <td><%= cashflow.year %></td>
        <td><%= cashflow.accounting_date %></td>
        <td><%= cashflow.name %></td>
        <td><%= cashflow.balance %></td>
        <td><%= link_to 'Show', cashflow %></td>
        <td><%= link_to 'Edit', edit_cashflow_path(cashflow) %></td>
        <td><%= link_to 'Destroy', cashflow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

